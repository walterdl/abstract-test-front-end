{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      }
    },
    {
      "name": "Attach Chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "url": "http://localhost:3000*",
      "webRoot": "${workspaceFolder}/src"
    },
    {
      "name": "Attach Firefox",
      "type": "firefox",
      "request": "attach",
      "port": 6080,
      "url": "http://localhost:3000*",
      "webRoot": "${workspaceFolder}"
    },
  ]
}